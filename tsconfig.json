{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    "outDir": "./dist",
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "includes": [
    "src"
  ],  
}
