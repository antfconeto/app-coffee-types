{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    "outDir": "./dist",
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "includes": [
    "src"
  ],  
}
